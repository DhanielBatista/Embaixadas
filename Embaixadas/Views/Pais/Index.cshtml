        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PaisNome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PaisCapital)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PaisMoeda)
            </td>
